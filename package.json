{
  "publisher": "PyJOJO",
  "name": "pycode-jojo",
  "displayName": "PyCodeJOJO",
  "description": "Code checker + snippet inserter + color picker for Python developers.",
  "version": "2025.5.5",
  "icon": "images/dark.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onCommand:python-ex.makePythonProperty"
  ],
  "main": "./extension.js",
  "contributes": {
    "themes": [
      {
        "label": "PyCodeJOJO Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-color-theme.json"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "pycodejojo.enableTheme": {
          "type": "boolean",
          "default": true,
          "description": "启用 PyCodeJOJO 主题"
        },
        "pycodejojo.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "启用代码诊断功能"
        },
        "pycodejojo.enableColorPicker": {
          "type": "boolean",
          "default": true,
          "description": "启用颜色选择器功能"
        },
        "pycodejojo.checkForLoopVariables": {
          "type": "boolean",
          "default": true,
          "description": "检查 for 循环变量冲突"
        },
        "pycodejojo.checkModuleNameConflicts": {
          "type": "boolean",
          "default": true,
          "description": "检查模块名称冲突"
        },
        "pycodejojo.checkUninitializedInherited": {
          "type": "boolean",
          "default": true,
          "description": "检查未初始化的继承类"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "pyright": "^1.1.400"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/VSCode-Python-JOJO.git",
    "issues": "https://github.com/SakuraMYK/VSCode-Python-JOJO/issues"
  }
}
