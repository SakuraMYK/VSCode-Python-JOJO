{
  "publisher": "PyJOJO",
  "name": "pycodejojo",
  "displayName": "PyCodeJOJO",
  "description": "Python diagnostics, property generator, color picker and dark theme toolkit for enhanced VS Code development.",
  "version": "2025.5.5",
  "icon": "images/dark.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./extension.js",
  "contributes": {
    "themes": [
      {
        "label": "PyCodeJOJO Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "PyCodeJOJO Dark2",
        "uiTheme": "vs-dark",
        "path": "./themes/dark2.json"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "pycodejojo.theme": {
          "type": "string",
          "enum": [
            "PyCodeJOJO Dark",
            "PyCodeJOJO Dark2",
            "Disabled"
          ],
          "default": "PyCodeJOJO Dark2",
          "description": "选择 PyCodeJOJO 主题样式"
        },
        "pycodejojo.enableColorPicker": {
          "type": "boolean",
          "default": true,
          "description": "启用颜色选择器功能"
        },
        "pycodejojo.checkForLoopVariableConflict": {
          "type": "boolean",
          "default": true,
          "description": "检查 for 循环变量冲突"
        },
        "pycodejojo.checkModuleNameConflicts": {
          "type": "boolean",
          "default": true,
          "description": "检查模块名称覆盖冲突"
        },
        "pycodejojo.checkUninitializedInherited": {
          "type": "boolean",
          "default": true,
          "description": "检查未初始化的继承类"
        },
        "pycodejojo.enablePropertyGenerator": {
          "type": "boolean",
          "default": true,
          "description": "启用 property getter/setter 生成器"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "pyright": "^1.1.400"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/VSCode-Python-JOJO.git",
    "issues": "https://github.com/SakuraMYK/VSCode-Python-JOJO/issues"
  }
}
