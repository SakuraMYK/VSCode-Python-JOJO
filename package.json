{
  "publisher": "PyJOJO",
  "name": "pycodejojo",
  "displayName": "PyCode JOJO",
  "description": "Python diagnostics, property generator, color picker and dark theme toolkit for enhanced VS Code development.",
  "version": "2025.5.9",
  "icon": "images/kujojotaro.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./extension.js",
  "contributes": {
    "submenus": [
      {
        "id": "pycodejojo.themeMenu",
        "label": "PyCodeJOJO"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "pycodejojo.themeMenu",
          "group": "navigation"
        }
      ],
      "pycodejojo.themeMenu": [
        {
          "command": "pycodejojo.randomTheme",
          "group": "a@1"
        },
        {
          "command": "pycodejojo.applyDarkTheme",
          "group": "preset@1"
        },
        {
          "command": "pycodejojo.applyDark2Theme",
          "group": "preset@2"
        },
        {
          "command": "pycodejojo.disableTheme",
          "group": "control@1"
        }
      ]
    },
    "commands": [
      {
        "command": "pycodejojo.randomTheme",
        "title": "Random Theme"
      },
      {
        "command": "pycodejojo.applyDarkTheme",
        "title": "PyCodeJOJO Dark"
      },
      {
        "command": "pycodejojo.applyDark2Theme",
        "title": "PyCodeJOJO Dark2"
      },
      {
        "command": "pycodejojo.disableTheme",
        "title": "Disabled"
      }
    ],
    "themes": [
      {
        "label": "PyCodeJOJO Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "PyCodeJOJO Dark2",
        "uiTheme": "vs-dark",
        "path": "./themes/dark2.json"
      },
      {
        "label": "PyCodeJOJO Random",
        "uiTheme": "vs-dark",
        "path": "./themes/random.json"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "pycodejojo.language": {
          "type": "string",
          "enum": [
            "English",
            "Simplified Chinese"
          ],
          "default": "English",
          "description": "选择插件的语言"
        },
        "pycodejojo.theme": {
          "type": "string",
          "enum": [
            "PyCodeJOJO Dark",
            "PyCodeJOJO Dark2",
            "PyCodeJOJO Random",
            "Disabled"
          ],
          "default": "PyCodeJOJO Dark2",
          "description": "选择 PyCodeJOJO 主题样式"
        },
        "pycodejojo.enableColorPicker": {
          "type": "boolean",
          "default": false,
          "description": "启用颜色选择器"
        },
        "pycodejojo.checkForLoopVariableConflict": {
          "type": "boolean",
          "default": true,
          "description": "检查 for 循环变量冲突"
        },
        "pycodejojo.checkImportVsLocalClassConflict": {
          "type": "boolean",
          "default": true,
          "description": "检查模块名称覆盖冲突"
        },
        "pycodejojo.checkMissingSuperInit": {
          "type": "boolean",
          "default": true,
          "description": "检查未初始化的继承类"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "pyright": "^1.1.400"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/VSCode-Python-JOJO.git",
    "issues": "https://github.com/SakuraMYK/VSCode-Python-JOJO/issues"
  }
}
